@model EditRoleViewModel

@{
    ViewBag.Title = "Edition role";
}

<h3>Edition role</h3>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary LargeurAutoBouton">Modifier</button>
            <a asp-action="ListRoles" class="btn btn-primary LargeurAutoBouton">Annuler</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>utilisateurs liés au rôle</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Aucun utilisateur dans le rôle</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary LargeurAutoBouton">Ajouter utilisateurs</a>
            <a href="#" class="btn btn-primary LargeurAutoBouton">Supprimer utilisateurs</a>
        </div>
    </div> 
</form>